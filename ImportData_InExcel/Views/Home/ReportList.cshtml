@model IEnumerable<ImportData_InExcel.Models.Vendor_inventory_Upload>

@{
    ViewBag.Title = "ReportList";
}

<h3 class="text-center" style="background-color:dodgerblue">ReportList</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div style="margin-left:750px;">
    <lable><strong> Inventory Date:</strong></lable>
    <input type="date" name="datePicker" id="txtID" value="@TempData["date"]" required />
    <input type="submit" name="submit" id="SubmitBtn" value="Submit" />
</div>
@if (ViewBag.Message == null)
{
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.vendor_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit_Of_Measurement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closing_Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.vendor_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit_Of_Measurement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Closing_Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UploadDate)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.InventoryId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.InventoryId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.InventoryId })
                    </td>*@
            </tr>
        }
    </table>
}
    else
    {
        <div>
            <h4 class="text-center">
                @ViewBag.Message
            </h4>
        </div>
    }

<script src="https://code.jquery.com/jquery-3.6.3.js"
        integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous">
</script>
<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
<script type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $('#SubmitBtn').click(function () {
            var url = "@Url.Action("ReportList", "Home")?Filter_value=" + $('#txtID').val()
            location.href = url;
        });

    });
</script>
